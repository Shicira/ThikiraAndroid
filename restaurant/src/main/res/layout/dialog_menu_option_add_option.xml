<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.dsm.restaurant.presentation.ui.main.menu.registration.MenuRegistrationViewModel" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_menu_option_add_option_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_menu_option_add_option_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:digits="0123456789"
            app:layout_constraintTop_toBottomOf="@id/et_menu_option_add_option_name" />

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:onClick="@{() -> viewModel.addOption(etMenuOptionAddOptionName.getText().toString(), Integer.parseInt(etMenuOptionAddOptionPrice.getText().toString()), position)}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_menu_option_add_option_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>