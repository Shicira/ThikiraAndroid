<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.dsm.restaurant.presentation.ui.register.RegisterViewModel" />

        <import type="android.view.View" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_register1"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/white"
                android:elevation="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_arrow_back_24dp"
                tools:targetApi="lollipop">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/do_register_restaurant"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_register1_image"
                android:layout_width="0dp"
                android:layout_height="132dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="25dp"
                android:background="#E0E0E0"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tb_register1"
                image="@{viewModel.imageUrl}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restaurant_image"
                android:textColor="@color/colorGrey"
                android:visibility="@{viewModel.imageUrl.empty ? View.VISIBLE : View.INVISIBLE}"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_register1_image"
                app:layout_constraintLeft_toLeftOf="@id/iv_register1_image"
                app:layout_constraintRight_toRightOf="@id/iv_register1_image"
                app:layout_constraintTop_toTopOf="@id/iv_register1_image" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.isUploadingImage ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="@id/iv_register1_image"
                app:layout_constraintLeft_toLeftOf="@id/iv_register1_image"
                app:layout_constraintRight_toRightOf="@id/iv_register1_image"
                app:layout_constraintTop_toTopOf="@id/iv_register1_image" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_register1_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_register_edittext"
                android:drawableStart="@drawable/ic_restaurant_grey_24dp"
                android:drawableLeft="@drawable/ic_restaurant_grey_24dp"
                android:drawablePadding="16dp"
                android:hint="@string/restaurant_name"
                android:nextFocusDown="@id/et_register1_phone"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:textColorHint="@color/colorGrey"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/gl_register1_left"
                app:layout_constraintRight_toRightOf="@id/gl_register1_right"
                app:layout_constraintTop_toBottomOf="@id/iv_register1_image"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_register1_phone"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_register_edittext"
                android:digits="0123456789"
                android:drawableStart="@drawable/ic_register_phone_24dp"
                android:drawableLeft="@drawable/ic_register_phone_24dp"
                android:drawablePadding="16dp"
                android:hint="@string/phone_number"
                android:inputType="number"
                android:paddingStart="24dp"
                android:paddingLeft="24dp"
                android:textColorHint="@color/colorGrey"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/gl_register1_left"
                app:layout_constraintRight_toRightOf="@id/gl_register1_right"
                app:layout_constraintTop_toBottomOf="@id/et_register1_name"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/btn_register1_location"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_primary_light_button"
                android:text="@string/select_location"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/gl_register1_left"
                app:layout_constraintRight_toRightOf="@id/gl_register1_right"
                app:layout_constraintTop_toBottomOf="@id/et_register1_phone" />

            <TextView
                android:id="@+id/tv_register1_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/default_location"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_register1_location" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_register1_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:layout_marginBottom="42dp"
                android:hint="@string/possible_area"
                android:textColorHint="@color/colorGrey"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/btn_register1_next"
                app:layout_constraintLeft_toLeftOf="@id/gl_register1_left"
                app:layout_constraintRight_toRightOf="@id/gl_register1_right"
                app:layout_constraintTop_toBottomOf="@id/tv_register1_location" />

            <Button
                android:id="@+id/btn_register1_next"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_primary_light_button"
                android:text="@string/next"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/gl_register1_left"
                app:layout_constraintRight_toRightOf="@id/gl_register1_right" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_register1_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                app:layout_constraintGuide_begin="60dp"
                tools:ignore="RtlSymmetry" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_register1_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="60dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>