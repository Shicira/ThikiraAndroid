<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_menu"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.dsm.restaurant.presentation.ui.main.menu.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menuFragment_to_menuDetailFragment"
            app:destination="@id/menuDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_menuFragment_to_menuRegistration1Activity"
            app:destination="@id/menuRegistration1Activity"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/menuDetailFragment"
        android:name="com.dsm.restaurant.presentation.ui.main.menu.detail.MenuDetailFragment"
        android:label="MenuDetailFragment"
        tools:layout="@layout/fragment_menu_detail" />
    <activity
        android:id="@+id/menuRegistration1Activity"
        android:name="com.dsm.restaurant.presentation.ui.main.menu.registration.MenuRegistrationActivity"
        android:label="activity_menu_registration1"
        tools:layout="@layout/activity_menu_registration" />
</navigation>